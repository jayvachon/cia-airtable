<%- include('partials/head'); -%>
<body>
	<%- include('partials/header'); -%>

	<form id="term" action="/ci/set-enrollment-term" method="post">

		<p>Current term: <%= currentTerm %></p>
		<!-- Term select -->
	    <select class="selectpicker_term" data-style="btn-info" name="selectpicker_term">
	        <optgroup label="Select Term">
	            <option value="">Select Enrollment Term</option>
	            <% terms.forEach(function(term){ %>
	            <option value="<%= JSON.stringify(term) %>"><%= term.Name %></option>
	            <% }) %>
	        </optgroup>
	    </select>

	    <br>
	    <br>

	    <p>Current academic term: <%= currentAcademicTerm %></p>
	    <!-- Academic term select -->
	    <select class="selectpicker_academicTerm" data-style="btn-info" name="selectpicker_academicTerm">
	        <optgroup label="Select Academic Term">
	            <option value="">Select Academic Term</option>
	            <% academicTerms.forEach(function(academicTerm){ %>
	            <option value="<%= JSON.stringify(academicTerm) %>"><%= academicTerm.name %></option>
	            <% }) %>
	        </optgroup>
	    </select>

	    <br>
	    <br>
	    <input type="submit" value="Submit" />

	    <br>
	    <br>
	</form>

	<a href="/ci">Back</a>
</body>